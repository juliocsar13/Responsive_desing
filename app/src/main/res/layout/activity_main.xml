<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00aad4"
    android:gravity="center"
    android:id="@+id/julio"
    android:weightSum="1">

    <ImageView

        android:layout_width="@dimen/layout_width_image_view"
        android:layout_height="@dimen/layout_height_image_view"
        android:src="@drawable/julieta"
        android:layout_gravity="center_horizontal" />

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">


        <EditText
            android:layout_width="@dimen/layout_width_edit_text"
            android:layout_height="@dimen/layout_height_edit_text"
            android:id="@+id/editText"
            android:textSize="@dimen/text_hint"
            android:hint="primer comentario"
            android:gravity="center"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="@dimen/layout_width_edit_text"
            android:layout_height="@dimen/layout_height_edit_text"
            android:id="@+id/editText2"
            android:hint="segundo comentario"
            android:textSize="@dimen/text_hint"
            android:layout_marginTop="10dp"
            android:gravity="center" />

        <Button
            android:layout_width="@dimen/layout_width_botton"
            android:layout_height="@dimen/layout_height_botton"
            android:text="New Button"
            android:id="@+id/button"
            android:textSize="@dimen/text_size_botton"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</LinearLayout>
